<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    tools:showIn="@layout/activity_show_commuting_time">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/place_text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="14 rue des Verts Manteaux du QuÃ©bec, Paris"/>

            <TextView
                android:id="@+id/place_text_commute_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="42 min."/>

            <TextView
                android:id="@+id/place_text_weekly_commute_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5 times"/>

            <TextView
                android:id="@+id/place_text_weekly_commute_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="210 min."/>
        </LinearLayout>

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/place_image_content_desc"
            android:src="#ffffc0"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v7.widget.CardView>